{
  "name": "nest-boilerplate",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "pre:local": "cp env/.env.local .env",
    "pre:dev": "cp env/.env.development .env",
    "pre:prod": "cp env/.env.production .env",
    "pre:test": "cp env/.env.development .env",
    "dev:local": "npm run pre:local && nest start --watch",
    "build:local": "npm run pre:local && nest build",
    "start:local": "npm run pre:local && node dist/main",
    "dev:dev": "npm run pre:dev && nest start --watch",
    "build:dev": "npm run pre:dev && nest build",
    "start:dev": "npm run pre:dev && node dist/main",
    "build:prod": "npm run pre:prod && nest build",
    "start:prod": "npm run pre:prod && node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "npm run pre:local && jest --runInBand --detectOpenHandles --verbose --coverage",
    "test:watch": "npm run pre:local && jest --watch",
    "test:e2e": "npm run pre:local && jest --config ./test/jest-e2e.json",
    "migrate:generate": "npm run pre:local && typeorm migration:generate migrations/init -d src/config/migration.config.ts",
    "migrate:create": "npm run pre:local && typeorm migration:create migrations/%npm_config_name%",
    "query:local": "npm run pre:local && typeorm query -d src/config/migration.config.ts",
    "migrate:local:run": "npm run pre:local && typeorm migration:run -d src/config/migration.config.ts",
    "migrate:local:revert": "npm run pre:local && typeorm migration:revert -d src/config/migration.config.ts",
    "migrate:local:show": "npm run pre:local && typeorm migration:show -d src/config/migration.config.ts",
    "query:dev": "npm run pre:dev && typeorm query -d src/config/migration.config.ts",
    "migrate:dev:run": "npm run pre:dev && typeorm migration:run -d src/config/migration.config.ts",
    "migrate:dev:revert": "npm run pre:dev && typeorm migration:revert -d src/config/migration.config.ts",
    "migrate:dev:show": "npm run pre:dev && typeorm migration:show -d src/config/migration.config.ts",
    "query:prod": "npm run pre:prod && typeorm query -d src/config/migration.config.ts",
    "migrate:prod:run": "npm run pre:prod && typeorm migration:run -d src/config/migration.config.ts",
    "migrate:prod:revert": "npm run pre:prod && typeorm migration:revert -d src/config/migration.config.ts",
    "migrate:prod:show": "npm run pre:prod && typeorm migration:show -d src/config/migration.config.ts",
    "format:write": "prettier --write \"**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"**/*.{ts, tsx}\" --cache"
  },
  "dependencies": {
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^11.0.6",
    "@nestjs/core": "^11.0.6",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.6",
    "@nestjs/swagger": "^11.0.3",
    "@nestjs/throttler": "^6.4.0",
    "@nestjs/typeorm": "^11.0.0",
    "@standard-schema/spec": "^1.0.0",
    "argon2": "^0.43.0",
    "axios": "^1.7.9",
    "bytes": "^3.1.2",
    "class-transformer": "^0.5.1",
    "cookie-parser": "^1.4.7",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "fast-safe-stringify": "^2.1.1",
    "handlebars": "^4.7.8",
    "ms": "^2.1.3",
    "nodemailer": "^7.0.3",
    "otplib": "^12.0.1",
    "passport-jwt": "^4.0.1",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "ts-pattern": "^5.6.2",
    "typeorm": "^0.3.20",
    "winston": "^3.17.0",
    "winston-console-format": "^1.0.8",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.25.56"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.4.2",
    "@nestjs/cli": "^11.0.2",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.6",
    "@types/bytes": "^3.1.5",
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/ms": "^2.1.0",
    "@types/node": "^22.12.0",
    "@types/nodemailer": "^6.4.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3"
  },
  "overrides": {
    "@nestjs-modules/mailer": {
      "mjml": "^5.0.0-alpha.4"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "!**/*.config.ts",
      "!**/*.module.ts",
      "!**/main.ts"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "src/(.*)": "<rootDir>/$1",
      "test/(.*)": "<rootDir>/../test/$1"
    }
  }
}
